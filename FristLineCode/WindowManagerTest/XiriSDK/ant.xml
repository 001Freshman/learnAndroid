                <include name="version" >
                </include>
            </fileset>
        </copy>

        <copy todir="bin/classes/com/iflytek/xiri/focusscene" >

            <fileset dir="." >

                <include name="version" >
                </include>
            </fileset>
        </copy>

          <copy todir="bin/classes/com/iflytek/xiri/proxyscene" >

            <fileset dir="." >

                <include name="version" >
                </include>
            </fileset>
        </copy>
        <copy todir="bin/classes/com/iflytek/xiri/sceneplus" >

            <fileset dir="." >

                <include name="version" >
                </include>
            </fileset>
        </copy>
        
        <copy todir="bin/classes/com/iflytek/xiri/feedback" >

            <fileset dir="." >

                <include name="version" >
                </include>
            </fileset>
        </copy>

        <copy todir="bin/classes/com/iflytek/xiri/appservice" >

            <fileset dir="." >

                <include name="version" >
                </include>
            </fileset>
        </copy>
        
        <copy todir="bin/classes/tv/yuyin/view/proxy/version" >

            <fileset dir="." >

                <include name="version" >
                </include>
            </fileset>
        </copy>

        <jar jarfile="bin/XiriScene.jar" >

            <fileset dir="bin/classes" >

                <include name="com/iflytek/xiri/scene/version" />

                <include name="com/iflytek/xiri/scene/Scene.class" />

                <include name="com/iflytek/xiri/scene/ISceneListener.class" />
				 <include name="com/iflytek/xiri/scene/Scene*.class" />

                <include name="com/iflytek/xiri/scene/ISceneListener*.class" />
				<exclude name="com/iflytek/xiri/scene/ScenePlus.class" />


            </fileset>
        </jar>
                
        <jar jarfile="bin/XiriScene+.jar" >

            <fileset dir="bin/classes" >

                <include name="com/iflytek/xiri/sceneplus/version" />

                <include name="com/iflytek/xiri/scene/ScenePlus.class" />

                <include name="com/iflytek/xiri/scene/ISceneListener.class" />

                <include name="com/iflytek/xiri/scene/ScenePlus*.class" />

                <include name="com/iflytek/xiri/scene/ISceneListener*.class" />
            </fileset>
        </jar>

        <jar jarfile="bin/Speechcontrol.jar" >

            <fileset dir="bin/classes" >

                <include name="com/iflytek/xiri/speech/control/*.class" />
            </fileset>
        </jar>
        <jar jarfile="bin/XiriFocusScene.jar" >

            <fileset dir="bin/classes" >

                <include name="com/iflytek/xiri/focusscene/version" />

                <include name="com/iflytek/xiri/scene/FocusScene.class" />

                <include name="com/iflytek/xiri/scene/IFocusSceneListener.class" />

                <include name="com/iflytek/xiri/scene/FocusScene*.class" />

                <include name="com/iflytek/xiri/scene/IFocusSceneListener*.class" />
            </fileset>
        </jar>
               
        <jar jarfile="bin/XiriProxyScene.jar" >

            <fileset dir="bin/classes" >

                <include name="com/iflytek/xiri/proxyscene/version" />

                <include name="com/iflytek/xiri/scene/ProxyScene.class" />

                <include name="com/iflytek/xiri/scene/IProxySceneListener.class" />

                <include name="com/iflytek/xiri/scene/ProxyScene*.class" />

                <include name="com/iflytek/xiri/scene/IProxySceneListener*.class" />
            </fileset>
        </jar>

        <jar jarfile="bin/XiriFeedback.jar" >

            <fileset dir="bin/classes" >

                <include name="com/iflytek/xiri/feedback/version" />

                <include name="com/iflytek/xiri/Feedback.class" />

                <include name="com/iflytek/xiri/Feedback$*.class" />
            </fileset>
        </jar>

        <jar jarfile="bin/AppService.jar" >

            <fileset dir="bin/classes" >

                <include name="com/iflytek/xiri/appservice/version" />

                <include name="com/iflytek/xiri/AppService.class" />

                <include name="com/iflytek/xiri/AppService*.class" />
                
                <include name="com/iflytek/xiri/AnswerBroadcaseRecevier.class" />
                
                <include name="com/iflytek/xiri/AnswerBroadcaseRecevier*.class" />

                <include name="com/iflytek/xiri/RSAUtils.class" />

                <include name="com/iflytek/xiri/RSAUtils*.class" />

                <include name="com/iflytek/xiri/video/channel/ChannelItem.class" />
            </fileset>
        </jar>
        
        <jar jarfile="bin/OpenVoiceProxy.jar" >
            <fileset dir="bin/classes" >

                <include name="tv/yuyin/view/proxy/version/version" />

                <include name="tv/yuyin/view/proxy/IVoiceListener.class" />
                
                <include name="tv/yuyin/view/proxy/IVoiceListener*.class" />

                <include name="tv/yuyin/view/proxy/ZAgreement.class" />
                
                <include name="tv/yuyin/view/proxy/VoiceService.class" />
                
                <include name="tv/yuyin/view/proxy/VoiceService*.class" />
                
            </fileset>
        </jar>
